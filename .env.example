# AWS Bedrock Configuration

# AWS Credentials (configure via AWS CLI or environment variables)
# aws configure
# Or set environment variables:
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
# AWS_DEFAULT_REGION=us-east-1

# Bedrock Models Used:
# - amazon.titan-embed-text-v1 (for embeddings)
# - anthropic.claude-3-sonnet-20240229-v1:0 (for generation)

REGION_NAME=us-east-1
EMBEDDING_MODEL_ID=amazon.titan-embed-text-v1
LLM_MODEL_ID=anthropic.claude-3-sonnet-20240229-v1:0

# Vector Store Settings
FAISS_STORE_PATH=faiss_store
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# RAG Settings
RETRIEVAL_K=3
TEMPERATURE=0.7

# ============================================
# ADVANCED RETRIEVAL STRATEGIES (Phase 3)
# ============================================

# Retrieval Strategy Configuration
# Options: semantic, hybrid, query_expansion, reranking, self_query, multihop
RETRIEVAL_STRATEGY=semantic

# Hybrid Search Settings (when RETRIEVAL_STRATEGY=hybrid)
# Weight for semantic search (0-1). Keyword weight = 1 - HYBRID_SEMANTIC_WEIGHT
HYBRID_SEMANTIC_WEIGHT=0.6

# Semantic Query Expansion Settings (when RETRIEVAL_STRATEGY=query_expansion)
# Number of query paraphrases to generate
QUERY_EXPANSION_COUNT=3

# Context Re-ranking Settings (when RETRIEVAL_STRATEGY=reranking)
# Number of initial results to re-rank
RERANK_TOP_K=5

# Self-Query Retriever Settings (when RETRIEVAL_STRATEGY=self_query)
# Comma-separated list of metadata fields to extract filters from
SELF_QUERY_METADATA_FIELDS=source,page,type,date

# Multi-Hop Retrieval Settings (when RETRIEVAL_STRATEGY=multihop)
# Maximum number of sub-questions to decompose into
MULTIHOP_MAX_HOPS=3

# Logging
LOG_LEVEL=INFO

# ============================================
# EVALUATION & LOGGING (Phase 4)
# ============================================

# RAGAS Evaluation Settings
# Enable RAGAS evaluation (faithfulness, context recall, precision, relevancy)
ENABLE_RAGAS_EVALUATION=true

# Minimum thresholds for RAGAS metrics (0.0 to 1.0)
RAGAS_FAITHFULNESS_THRESHOLD=0.80
RAGAS_CONTEXT_RECALL_THRESHOLD=0.70

# Responsible AI Settings
# Enable content filtering and safety checks
ENABLE_RESPONSIBLE_AI=true

# Comma-separated list of sensitive keywords to filter
CONTENT_FILTER_KEYWORDS=inappropriate,offensive,harmful,violent,discriminatory,hateful,explicit

# Query Logging Settings
# Directory for storing logs
LOG_DIRECTORY=logs

# Log retention (days)
LOG_RETENTION_DAYS=30
